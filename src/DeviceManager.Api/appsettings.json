{
  "ConnectionStrings": {
   
    // Postgres, MsSql
    "DatabaseType": "MsSql",

    // Sql Database
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DeviceDb;Trusted_Connection=True;MultipleActiveResultSets=true"

    // Mongo Db connection string  --- Not yet implemented
    // "DefaultConnection": "mongodb://localhost:27017"

    // Postgres database
    //"DefaultConnection": "User ID=postgres;Password=abc@123;Server=localhost;Port=5432;Database=DeviceDb-ten2;Integrated Security=false;Pooling=true"
