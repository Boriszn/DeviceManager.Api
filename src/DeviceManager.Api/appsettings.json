  "Logging": {
    "PathFormat": "Logs/log-{Date}.txt",
    "Json": true,
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AppSettings": {

    // Default application culture
    "DefaultCulture": "en-US",

    // Thread culture, affects calculations
    "SupportedCultures": [ "en-US" ],

    //Thread UI Culture, affects display strings
    "SupportedUiCultures": [ "en-US", "de-DE" ]
  }
}